{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "composite": true,

    "baseUrl": ".",
    "paths": {
      "@server/*": ["server/src/*"],
      "@answeranki/shared/*": ["shared/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
